<included>
    
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="nacos-address">
        <append>true</append>
        <encoder>
            <Pattern>%date %level %msg%n%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/nacos-address.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/nacos-address.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>2GB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>7GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <logger additivity="false" name="com.alibaba.nacos.address.main">
        <appender-ref ref="nacos-address"/>
        <level value="INFO"/>
    </logger>
    
    <property name="LOG_HOME" value="${logPath}"/>
    
    <springProperty defaultValue="${user.home}/nacos/logs" name="logPath" scope="context" source="nacos.logs.path"/>
</included>

