<included>
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="dumpFile">
        <append>true</append>
        <encoder>
            <Pattern>%date %level %msg%n%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/config-dump.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/config-dump.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>2GB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>7GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="pullFile">
        <append>true</append>
        <encoder>
            <Pattern>%date %level %msg%n%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/config-pull.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/config-pull.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>128MB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="fatalFile">
        <append>true</append>
        <encoder>
            <Pattern>%date %level %msg%n%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/config-fatal.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/config-fatal.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>128MB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="memoryFile">
        <append>true</append>
        <encoder>
            <Pattern>%date %level %msg%n%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/config-memory.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/config-memory.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>128MB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="pullCheckFile">
        <append>true</append>
        <encoder>
            <Pattern>%msg%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/config-pull-check.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/config-pull-check.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>1GB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="aclLog">
        <append>true</append>
        <encoder>
            <Pattern>%date %level %msg%n%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/config-acl.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/config-acl.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>512MB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="clientLog">
        <append>true</append>
        <encoder>
            <Pattern>%date|%msg%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/config-client-request.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/config-client-request.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>2GB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>7GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="sdkLog">
        <append>true</append>
        <encoder>
            <Pattern>%date|%msg%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/config-sdk-request.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/config-sdk-request.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>1GB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="traceLog">
        <append>true</append>
        <encoder>
            <Pattern>%date|%msg%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/config-trace.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/config-trace.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>2GB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>7GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="notifyLog">
        <append>true</append>
        <encoder>
            <Pattern>%date %level %msg%n%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/config-notify.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/config-notify.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>1GB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="appCollectorLog">
        <append>true</append>
        <encoder>
            <Pattern>%date %level %msg%n%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/config-app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/config-app.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>128MB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
        name="startLog">
        <append>true</append>
        <encoder>
            <Pattern>%date %level %msg%n%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_HOME}/config-server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <fileNamePattern>${LOG_HOME}/config-server.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>512MB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <logger additivity="false" name="com.alibaba.nacos.config.dumpLog">
        <appender-ref ref="dumpFile"/>
        <level value="INFO"/>
    </logger>
    
    <logger additivity="false" name="com.alibaba.nacos.config.pullLog">
        <appender-ref ref="pullFile"/>
        <level value="INFO"/>
    </logger>
    
    <logger additivity="false" name="com.alibaba.nacos.config.pullCheckLog">
        <appender-ref ref="pullCheckFile"/>
        <level value="INFO"/>
    </logger>
    <logger additivity="false" name="com.alibaba.nacos.config.fatal">
        <appender-ref ref="fatalFile"/>
        <level value="INFO"/>
    </logger>
    <logger additivity="false" name="com.alibaba.nacos.config.monitorLog">
        <appender-ref ref="memoryFile"/>
        <level value="INFO"/>
    </logger>
    <logger additivity="false" name="com.alibaba.nacos.config.aclLog">
        <appender-ref ref="aclLog"/>
        <level value="INFO"/>
    </logger>
    <logger additivity="false" name="com.alibaba.nacos.config.clientLog">
        <appender-ref ref="clientLog"/>
        <level value="info"/>
    </logger>
    
    <logger additivity="false" name="com.alibaba.nacos.config.sdkLog">
        <appender-ref ref="sdkLog"/>
        <level value="INFO"/>
    </logger>
    
    <logger additivity="false" name="com.alibaba.nacos.config.notifyLog">
        <appender-ref ref="notifyLog"/>
        <level value="INFO"/>
    </logger>
    
    <logger additivity="false" name="com.alibaba.nacos.config.traceLog">
        <appender-ref ref="traceLog"/>
        <level value="info"/>
    </logger>
    
    <logger additivity="false" name="com.alibaba.nacos.config.appCollectorLog">
